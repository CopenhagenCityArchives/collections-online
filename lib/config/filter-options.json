{
  "catalog": {
    "label": "Samling",
    "notSelectedLabel": "Alle samlinger",
    "type": "catalog",
    "options": {
      "AS": {
        "label": "Antiksamlingen",
        "method": {
          "query": {"match": {"catalog": "AS"}}
        }
      },
      "BA": {
        "label": "Bevaringsafdelingen",
        "method": {
          "query": {"match": {"catalog": "BA"}}
        }
      },
      "DMR": {
        "label": "Danmarks Middelalder og Renæssance",
        "method": {
          "query": {"match": {"catalog": "DMR"}}
        }
      },
      "DNT": {
        "label": "Danmarks Nyere Tid",
        "method": {
          "query": {"match": {"catalog": "DNT"}}
        }
      },
      "DO": {
        "label": "Danmarks Oldtid",
        "method": {
          "query": {"match": {"catalog": "DO"}}
        }
      },
      "KMM": {
        "label": "Den Kgl. Mønt- og Medaljesamling",
        "method": {
          "query": {"match": {"catalog": "KMM"}}
        }
      },
      "ES": {
        "label": "Etnografisk Samling",
        "method": {
          "query": {"match": {"catalog": "ES"}}
        }
      },
      "FHM": {
        "label": "Frihedsmuseet",
        "method": {
          "query": {"match": {"catalog": "FHM"}}
        }
      },
      "FLM": {
        "label": "Frilandsmuseet",
        "method": {
          "query": {"match": {"catalog": "FLM"}}
        }
      }
    }
  },
  "geolocation": {
    "label": "Placering",
    "notSelectedLabel": "Filtrer ikke efter placering",
    "options": {
      "true": {
        "label": "Har placering",
        "method": {
          "or": [
            {"exists": {"field": "google_maps_coordinates"}},
            {"exists": {"field": "google_maps_coordinates_crowd"}}
          ]
        }
      },
      "false": {
        "label": "Mangler placering",
        "method": {
          "and": [
            {"missing": {"field": "google_maps_coordinates"}},
            {"missing": {"field": "google_maps_coordinates_crowd"}}
          ]
        }
      }
    }
  },
  "mediaType": {
    "label": "Medietype",
    "notSelectedLabel": "Alle medietyper",
    "options": {
      "picture": {
        "label": "Billede",
        "method": {
          "query": {"match": {"file_format": "image"}}
        }
      },
      "video": {
        "label": "Film",
        "method": {
          "query": {"match": {"file_format": "video"}}
        }
      },
      "rotationPicture": {
        "label": "Rotationsbillede",
        "method": {
          "query": {"match": {"categories.name": "Rotationsbilleder"}}
        }
      }
    }
  },
  "license": {
    "label": "Licens",
    "notSelectedLabel": "Alle licenser",
    "options": {
      "public": {
        "label": "Må anvendes frit af alle",
        "method": {
          "query": {"match": {"license.id": 8}}
        }
      },
      "CC-BY": {
        "label": "Må anvendes med ændringer",
        "method": {
          "or": [
            {"query": {"match": {"license.id": 0}}},
            {"query": {"match": {"license.id": 5}}}
          ]
        }
      },
      "CC-BY-ND": {
        "label": "Må anvendes uden ændringer",
        "method": {
          "query": {"match": {"license.id": 4}}
        }
      },
      "CC-BY-NC": {
        "label": "Må anvendes til ikke-kommercielle formål med ændringer",
        "method": {
          "query": {"match": {"license.id": 1}}
        }
      },
      "CC-BY-NC-ND": {
        "label": "Må anvendes til ikke-kommercielle formål uden ændringer",
        "method": {
          "query": {"match": {"license.id": 2}}
        }
      },
      "no-known-rights": {
        "label": "Må kun anvendes efter aftale med rettighedshaver",
        "method": {
          "query": {"match": {"license.id": 9}}
        }
      }
    }
  }
}
